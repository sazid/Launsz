<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.mohammedsazid.android.launsz"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppThemeDark">
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_home"
            android:launchMode="singleTask"
            android:theme="@style/AppThemeDark"/>
        <activity
            android:name=".v2.MainActivity"
            android:label="@string/title_activity_home"
            android:launchMode="singleTask"
            android:screenOrientation="userPortrait"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
                <category android:name="android.intent.category.HOME"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".AppsListActivity"
            android:label="@string/title_activity_apps_list"
            android:parentActivityName=".HomeActivity"
            android:theme="@style/AppThemeDark">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mohammedsazid.android.launsz.HomeActivity"/>
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".HomeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mohammedsazid.android.launsz.HomeActivity"/>
        </activity>

        <service
            android:name=".v2.AppsService"
            android:enabled="true"
            android:exported="true"/>

        <receiver
            android:name=".v2.PackageModificationReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <data android:scheme="package"/>

                <action android:name="android.intent.action.PACKAGE_ADDED"/>
                <action android:name="android.intent.action.PACKAGE_REMOVED"/>
                <action android:name="android.intent.action.PACKAGE_CHANGED"/>
                <action android:name="android.intent.action.PACKAGE_DATA_CLEARED"/>
                <action android:name="android.intent.action.PACKAGE_REPLACED"/>
            </intent-filter>
        </receiver>

        <provider
            android:name=".v2.data.AppsInfoProvider"
            android:authorities="com.mohammedsazid.android.launsz.v2.data.AppsInfoProvider"
            android:enabled="true"
            android:exported="false">
        </provider>
    </application>

</manifest>
